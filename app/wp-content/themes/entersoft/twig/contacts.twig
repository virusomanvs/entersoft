{% block content %}

    <main class="page-content">
        <section class="section-80 section-lg-top-110 section-lg-bottom-110">
            <div class="shell text-left">
                <h1>Contact information</h1>
                <div class="range offset-top-35">
                    <div class="cell-md-4">
                        <p class="font-montserat">Email us with any questions or inquiries or use our contact data. We would be happy to answer your questions.</p>
                        <div class="contact-info">
                            <address>9870 St Vincent Place,<br class="hidden visible-lg-block visible-md-block">	Glasgow, DC 45 Fr 45.
                            </address>
                            <div class="contact-phone">
                                <dl>
                                    <dt>Freephone:</dt>
                                    <dd><a href="callto_3A#">+1 800 559 6580</a></dd>
                                </dl>
                                <dl>
                                    <dt>Telephone:</dt>
                                    <dd><a href="callto_3A#">+1 800 603 6035</a></dd>
                                </dl>
                                <dl>
                                    <dt>FAX:</dt>
                                    <dd><a href="callto_3A#">+1 800 889 9898</a></dd>
                                </dl>
                            </div>
                            <div class="mail">E-mail:	<a href="mailto:#">mail@demolink.org</a>
                            </div>
                        </div>
                    </div>
                    <div class="cell-md-8">
                        <!-- RD Mailform-->
                        <form data-form-output="form-output-global" data-form-type="contact" method="post" action="bat/rd-mailform.php" class="rd-mailform text-center text-md-right">
                            <div class="form-group">
                                <label for="contact-name" class="form-label">Your name</label>
                                <input id="contact-name" type="text" name="name" data-constraints="@Required" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="contact-email" class="form-label">Your email</label>
                                <input id="contact-email" type="email" name="email" data-constraints="@Required @Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="contact-message" class="form-label">Your message</label>
                                <textarea id="contact-message" name="message" data-constraints="@Required" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="offset-top-30 link-var-1 link-default">send message</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="rd-google-map rd-google-map-1">
                <div id="rd-google-map" data-zoom="18" data-x="80.250354" data-y="50.417215" class="rd-google-map"></div>
                <ul class="map_locations">
                    <li data-x="80.250354" data-y="50.417215">
                        <p style="font-size: 18px;">Семей, ул. Ч. Валиханова 124</p>
                    </li>
                </ul>
            </div>
        </section>
    </main>

{% endblock %}
